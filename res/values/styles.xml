<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="NavigationHeaderText">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MapToolbarTitle">
        <item name="android:textSize">13.5sp</item>
    </style>

    <style name="AlertDialogWithButtons" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    
    <style name="InfoDialog" parent="Widget.AppCompat.PopupWindow">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="InfoDialog.Animation">
        <item name="android:windowEnterAnimation">@anim/infodialog_enter</item>
        <item name="android:windowExitAnimation">@anim/infodialog_exit</item>
    </style>

</resources>
